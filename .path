#! /bin/bash -e

# export paths

# add name and path to binaries that can be exported directly below
declare -A pairs
pairs=( \
  [User local bin]=$HOME'/bin' \
  [Local sbin]=/usr/local/sbin \
  [AWS CLI]=/usr/local/bin/aws \
  [Python 3.6]=/usr/local/bin/python3 \
  [DC/OS CLI]=$HOME'/dcos/bin' \
  [Terraform CLI]=$HOME'/tools/terraform/terraform' \
  [PhantomJS 2.1]=/Users/tomtra/tools/phantomjs-2.1.1-macosx/bin/phantomjs \
  [MongoDB (Brew)]=/usr/local/bin/mongo \
  [MySQL]=/usr/local/mysql/bin \
  [jq]=/usr/local/bin/jq \
  [gettext]=/usr/local/bin/gettext \
)

for i in "${!pairs[@]}"; do
  j=${pairs[$i]}
  if [[ -f $j ]] || [[ -d $j ]]; then
    export PATH="$PATH:$j"
  else
    echo $i' not found in '$j'..not loaded to path'
  fi
done

# add to Path binaries that can't be exported directly below

# Google Cloud SDK.
if [[ -f /Users/tomtra/google-cloud-sdk/path.bash.inc ]]; then
  source '/Users/tomtra/google-cloud-sdk/path.bash.inc'
fi

# virtualenvwrapper (for Python)
if [[ -f /usr/local/bin/virtualenvwrapper.sh ]]; then
  source '/usr/local/bin/virtualenvwrapper.sh'
fi
